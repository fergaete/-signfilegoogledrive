<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>DriveSigner - {% block title %}{% endblock %}</title>
        {% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('bundles/app/vendor/bootstrap/dist/css/bootstrap.css') }}" type="text/css">
			<link rel="stylesheet" href="{{ asset('bundles/app/vendor/fontawesome/css/font-awesome.css') }}" type="text/css">
			<link rel="stylesheet" href="{{ asset('bundles/app/vendor/animate.css/animate.min.css') }}" type="text/css">
			<link rel="stylesheet" href="{{ asset('bundles/app/css/main.css') }}" type="text/css">
		{% endblock %}

		{% block javascripts %}
			<script type="text/javascript" src="{{ asset('bundles/app/vendor/jquery/dist/jquery.js') }}"></script>
			<script type="text/javascript" src="{{ asset('bundles/app/vendor/bootstrap/dist/js/bootstrap.js') }}"></script>	
			<script type="text/javascript" src="{{ asset('bundles/app/vendor/bootbox/bootbox.js') }}"></script>	
			<script type="text/javascript" src="{{ asset('bundles/app/js/main.js') }}"></script>	
		{% endblock %}
		
		<link rel="shortcut icon" href="{{ asset('bundles/app/img/favicon.png') }}"/>
    </head>
    <body>
	
		{% block navbar %}{% endblock %}
		
		{% block body %}{% endblock %}
		
		{% block footer %}
            {% render controller("AppBundle:Components:footer") %}
        {% endblock %}
		
    </body>
</html>